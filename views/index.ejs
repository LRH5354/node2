       <div class="container head-inner1" >
       <div class="row">
           <div class="col">
               <h1 class="Display-4">电影查询</h1>
           </div>
           <div class="col">
               <form class="form-inline" id="forseach">
                   <input type="text" class="form-control" id="keyword" value="输入关键字">
                   <button type="submit" class="btn btn-primary">搜索</button>
               </form>
           </div>
       </div>
       </div>

      <!-- 导航框-->
       <div class="head-inner2">
       <div class="container">
           <!-- Nav pills -->
           <ul class="nav nav-pills" role="tablist">
               <li class="nav-item">
                 <a class="text-white font-weight-bold nav-link active"  href="/?type=首页">首页</a>
               </li>
               <li class="nav-item">
                   <a class="text-white font-weight-bold nav-link "  href="/?type=电影">电影</a>
               </li>
               <li class="nav-item">
                   <a class="text-white font-weight-bold nav-link" href="/?type=电视剧">电视剧</a>
               </li>
               <li class="nav-item">
                   <a class="text-white font-weight-bold nav-link"  href="/?type=动画">动画</a>
               </li>
           </ul>
       </div>
       </div>
   </div>
      <!-- 图片轮询-->
  <div class="focusbox container">
      <div class="container">
          <div id="demo" class="carousel slide" data-ride="carousel">

              <!-- 指示符 -->
              <ul class="carousel-indicators">
                  <li data-target="#demo" data-slide-to="0" class="active"></li>
                  <li data-target="#demo" data-slide-to="1"></li>
                  <li data-target="#demo" data-slide-to="2"></li>
              </ul>

              <!-- 轮播图片 -->
              <div class="carousel-inner">
                  <div class="carousel-item active">
                      <img src="<%=info.result[2]._cover %>">
                      <!--<div class="carousel-caption">-->
                          <!--&lt;!&ndash;<h3>第一张图片描述标题</h3>&ndash;&gt;-->
                          <!--&lt;!&ndash;<p>这是一个小测试</p>&ndash;&gt;-->
                      <!--</div>-->
                  </div>
                  <div class="carousel-item">
                      <img src="<%=info.result[5]._cover %>">
                      <!--<div class="carousel-caption">-->
                          <!--&lt;!&ndash;<h3>第二张图片描述标题</h3>&ndash;&gt;-->
                          <!--&lt;!&ndash;<p>这是一个小测试!</p>&ndash;&gt;-->
                      <!--</div>-->
                  </div>
                  <div class="carousel-item">
                      <img src="<%=info.result[9]._cover%>">
                      <!--<div class="carousel-caption">-->
                          <!--&lt;!&ndash;<h3>第三张图片描述标题</h3>&ndash;&gt;-->
                          <!--&lt;!&ndash;<p>这是一个小测试!</p>&ndash;&gt;-->
                      <!--</div>-->
                  </div>
              </div>

              <!-- 左右切换按钮 -->
              <a class="carousel-control-prev" href="#demo" data-slide="prev">
                  <span class="carousel-control-prev-icon"></span>
              </a>
              <a class="carousel-control-next" href="#demo" data-slide="next">
                  <span class="carousel-control-next-icon"></span>
              </a>
          </div>
      </div>
  </div>

  <!-- 主要区域 -->

  <div class="tab-content">
      <div id="list" class="container  tab-pane active"><br>
          <h2><%=info.type%></h2>
          <div class="container">
              <div class="text-center row">
                  <div class="col"><h3>片名</h3></div>
                  <div class="col"><h3>导演</h3></div>
                  <div class="col"><h3>主演</h3></div>
                  <div class="col"><h3>评分</h3></div>
                  <div class="col"><h3>tags</h3></div>
              </div>
          </div>
              <ul class="list-group">
                  <%for(var i=0;i<info.result.length;i++){ %>
                 <li class="list-group-item list-group-item-light">
                      <div class="text-center row">
                          <!--<div class="pic_cover"><img src="<%=info.result[i]._cover%>"> </div>-->
                      <div class="col"><a target="_blank"  href="./click-m?title=<%=info.result[i]._title%>"><h5><%=info.result[i]._title%></h5></a></div>
                      <div class="col"><h5><%=info.result[i]._director%></h5></div>
                      <div class="col"><h5><%=info.result[i]._casts%></h5></div>
                      <div class="col"><h5><%=info.result[i]._rate%></h5></div>
                      <div class="col"><h5><%=info.result[i].tags%></h5></div>
                  </div>
                  </li>
                <%}%>
              </ul>
      </div>
  </div>
  <div class="container more" >
      <button class="btn btn-light btn-block text-primary font-weight-bold next" tp="<%= info.type %>" start="10">加载更多</button>
